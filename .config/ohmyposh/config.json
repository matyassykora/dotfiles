{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "foreground": "#f00",
          "style": "plain",
          "template": "# ",
          "type": "root"
        },
        {
          "foreground": "p:foreground",
          "style": "plain",
          "template": "{{ if ne .UserName \"maty\" }}{{ .UserName }}@{{ .HostName }}{{end}} ",
          "type": "session"
        },
        {
          "foreground": "p:blue",
          "properties": {
            "style": "full"
          },
          "style": "plain",
          "template": "{{ .Path }} ",
          "type": "path"
        },
        {
          "foreground": "p:gray",
          "properties": {
            "cherry_pick_icon": "\u2713 ",
            "fetch_status": true,
            "merge_icon": "\u25f4 ",
            "no_commits_icon": "[no commits]",
            "rebase_icon": "\u2c62 ",
            "tag_icon": "\u25b6 ",
            "branch_icon": "",
            "branch_identical_icon": ""
          },
          "style": "plain",
          "template": "{{ .HEAD }}{{ if gt .Ahead 0 }} \u2191{{.Ahead}}{{end}}{{ if gt .Behind 0 }} \u2193{{.Behind}}{{end}} {{ if .Working.Changed }}+{{ .Working.Added }} ~{{ .Working.Modified }} -{{ .Working.Deleted }} {{ end }}",
          "type": "git"
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "magenta",
          "template": "> "
        }
      ]
    },
    {
      "type": "rprompt",
      "segments": [
        {
          "foreground": "p:yellow",
          "style": "plain",
          "template": "\u274c{{ reason .Code }}",
          "type": "status"
        }
      ]
    }
  ],
  "secondary_prompt": {
    "foreground": "magenta",
    "background": "transparent",
    "template": ">> "
  },
  "transient_prompt": {
    "foreground": "magenta",
    "background": "transparent",
    "template": "> ",
    "foreground_templates": [
      "{{ if eq .Code 0 }}magenta{{ else }}red{{ end }}"
    ]
  },
  "palette": {
    "background": "#007ACC",
    "foreground": "#EEEEEE",
    "blue": "#6688FF",
    "gray": "#AAA",
    "yellow": "#FF0"
  },
  "version": 2
}
